<div class="container cover rounded px-4 py-2 my-4">
  <p style="color: green"><%= notice %></p>

  <div class="container d-flex justify-content-between align-items-center">
    <h1>Students</h1>

    <%= form_with url: students_path, method: :get, local: true, class: "d-flex" do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search by name", class: "form-control me-2" %>
      <%= submit_tag "search", class: "btn btn-outline-secondary" %>
    <% end %>

    <p id="flash-alert" class="text-danger"><%= flash[:alert] %></p>

    <%= link_to "New student", new_student_path, class: "btn btn-outline-secondary" %>
  </div>

  <div id="students" class="row">
    <% @students.each do |student| %>
      <div class="col-4 my-2">
        <div class="container student_id rounded">
          <%= render student %>
          <p>
            <%= link_to "Show this student", student, class: "btn btn-outline-primary py-1" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>

