<%= form_with(model: grade) do |form| %>
  <% if grade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
        <% grade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :teacher_id, style: "display: block" %>
    <%= form.collection_select :teacher_id, Teacher.all, :id, :fullname, prompt: "Select Teacher" %>
  </div>

  <div>
    <%= form.label :student_id, style: "display: block" %>
    <%= form.collection_select :student_id, Student.all, :id, :fullname, prompt: "Talabani Tanlang" %>
  </div>

  <div>
    <%= form.label :subject_id, style: "display: block;" %>
    <%= form.collection_select :subject_id, Subject.all, :id, :name, prompt: "Select Subject" %>
  </div>

  <div>
    <%= form.label :score, style: "display: block" %>
    <%= form.number_field :score %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
